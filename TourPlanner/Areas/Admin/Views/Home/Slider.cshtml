
@{
    ViewBag.Title = "Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMaster.cshtml";
}


<link href="~/Content/AddDestination.css" rel="stylesheet" />


<div class="row">
    <div class="col-lg-4 col-lg-offset-2 form">
        <h3 class="text-center">Update Slider Image</h3>


        <div class="form-group">
            <label for="name">Image</label>

            <input type="file" name="imageUpload" id="imageUpload" class="hide" />
            <label for="imageUpload" class="btn btn-large">Select file</label><br /><br /><br />
            <img src="" id="imagePreview" alt="Preview Image" width="200" />


        </div>


        <div class="form-group">
            <label for="name"> Title </label>
            <input required class="form-control" id="name" placeholder="Name" name="name">
        </div>

        <div class="form-group">
            <label for="name"> Description</label>
            <input required class="form-control" id="name" placeholder="Name" name="name">
        </div>




        <div class="form-group pull-right">
            <input type="submit" class="btn btn-danger " name="submit" value="ADD">
        </div>

    </div>
</div>

<script>
    $('#imageUpload').change(function () {
        readImgUrlAndPreview(this);
        function readImgUrlAndPreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result);
                }
            };
            reader.readAsDataURL(input.files[0]);
        }
    });
</script>
